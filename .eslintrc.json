{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:svelte/recommended",
    "prettier"
  ],
  "overrides": [
    {
      "files": ["*.svelte"],
      "parser": "eslint-plugin-svelte/parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".svelte"]
      }
    }
  ]
}
